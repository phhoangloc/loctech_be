generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model User {
  id          Int         @id @default(autoincrement())
  archive     String      @default("user")
  username    String      @unique
  password    String 
  email       String      @unique
  active      Boolean     @default(false)
  position    Role        @default(user)
  createdAt   DateTime    @default(now())
  blog        Blog[]
  news        News[]
  avataId     Int?           
  avata       Pic?        @relation("UserAvata", fields: [avataId], references: [id])
  pic         Pic[]
}
enum Role {
  user
  admin
}
model Page  {
  id                Int           @id @default(autoincrement())
  archive           String        @default("page") 
  name              String    
  slug              String        @unique
  content           String?       @db.Text
  createdAt         DateTime      @default(now())
  updateDate        DateTime      @default(now())
  draft             Boolean       @default(true)
}
model Blog  {
  id                Int           @id @default(autoincrement())
  archive           String        @default("blog")
  hostId            Int
  host              User          @relation(fields: [hostId], references: [id])   
  name              String        
  slug              String        @unique
  content           String        @db.Text
  draft             Boolean       @default(true)
  createdAt         DateTime      @default(now())
  updateDate        DateTime      @default(now())
  categoryId        Int
  category          Category      @relation(fields: [categoryId], references: [id])   
}
model Category  {
  id                Int           @id @default(autoincrement())
  archive           String        @default("category")
  name              String        
  createdAt         DateTime      @default(now())
  blog              Blog[]
}
model News  {
  id                Int           @id @default(autoincrement())
  archive           String        @default("news")
  hostId            Int
  host              User          @relation(fields: [hostId], references: [id])   
  name              String        
  slug              String        @unique
  content           String        @db.Text
  draft             Boolean       @default(true)
  createdAt         DateTime      @default(now())
  updateDate        DateTime      @default(now())
}
model Pic {
  id                Int           @id @default(autoincrement())
  archive           String        @default("pic")
  hostId            Int
  host              User          @relation(fields: [hostId], references: [id])   
  name              String      
  createdAt         DateTime      @default(now())
  avataOf           User[]        @relation("UserAvata")
}